<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5e9b9"
    tools:context="soundoftheanimals.cursoandroid.com.soundoftheanimals.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageDogID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/cao"
        app:layout_constraintBottom_toTopOf="@+id/imageLionID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageCatID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/gato"
        app:layout_constraintBottom_toTopOf="@+id/imageMonkeyID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageLionID"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toTopOf="@+id/imageSheepID"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageMonkeyID"
        android:layout_width="113dp"
        android:layout_height="99dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/macaco"
        app:layout_constraintBottom_toTopOf="@+id/imageCawID"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageSheepID"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageCawID"
        android:layout_width="112dp"
        android:layout_height="98dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="60dp"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/direitos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
